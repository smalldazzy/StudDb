<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/surname"
        android:inputType="text"></EditText>

    <EditText
        android:id="@+id/etGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/group"
        android:inputType="number"></EditText>

    <EditText
        android:id="@+id/etFac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/faculty"
        android:inputType="text"></EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:text="@string/add"></Button>

        <Button
            android:id="@+id/btnSort"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="283dp"
            android:text="@string/sort"></Button>

        <Button
            android:id="@+id/btnRead"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="142dp"
            android:text="@string/read"></Button>

        <Button
            android:id="@+id/btnFind"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="160dp"
            android:text="@string/find"></Button>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnAdd"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="-279dp"
            android:baselineAligned="false"
            android:text="@string/clear"></Button>

        <EditText
            android:id="@+id/etFind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="121dp"
            android:hint="@string/faculty"
            android:inputType="text"></EditText>
    </RelativeLayout>
</LinearLayout>
